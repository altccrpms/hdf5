#%Module 1.0
#
#  hdf5 mpi module for use with 'environment-modules' package:
#
conflict	hdf5
prereq		mpi/@MPI@-@CC@
prepend-path 	PATH 		@PREFIX@/@LIB@/@MPI@/bin
prepend-path	MANPATH		@PREFIX@/share/man
prepend-path 	LD_LIBRARY_PATH @PREFIX@/@LIB@/@MPI@/lib
setenv		HDF5_HOME	@PREFIX@
setenv		HDF5_INCLUDE	@PREFIX@/include/@MPI@-@ARCH@
setenv		HDF5_LIB	@PREFIX@/@LIB@/@MPI@/lib
